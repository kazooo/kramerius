<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <filter>
        <filter-name>clientClosedRequest</filter-name>
        <filter-class>cz.incad.Kramerius.ClientClosedRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>clientClosedRequest</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>xss</filter-name>
        <filter-class>cz.incad.Kramerius.XSSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>xss</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!-- basicauthentication filter -->
    <filter>
        <filter-name>basic</filter-name>
        <filter-class>cz.incad.kramerius.auth.basic.AuthFilter</filter-class>
        <init-param>
            <param-name>realm</param-name>
            <param-value>Protected</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>basic</filter-name>
        <url-pattern>/api/*</url-pattern>
        <url-pattern>/lr</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>cors</filter-name>
        <filter-class>cz.incad.Kramerius.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>cors</filter-name>
        <url-pattern>/api/*</url-pattern>
        <url-pattern>/zoomify/*</url-pattern>
        <url-pattern>/iiif/*</url-pattern>
        <url-pattern>/iiif-presentation/*</url-pattern>
    </filter-mapping>

    <!-- mod_proxy filter; doesnt work in krameriusdemo don't know why (logout doesn't work)
    <filter>
        <filter-name>mod_proxy</filter-name>
        <filter-class>cz.incad.Kramerius.apache.modproxy.ModProxyEnabledFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>mod_proxy</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    -->

    <!--  thrid party authentication -->
    <filter>
        <filter-name>thirdpartyauthfilter</filter-name>
        <filter-class>cz.incad.kramerius.auth.thirdparty.shibb.internal.InternalShibbolethAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>thirdpartyauthfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!-- Guice, must be last -->
    <filter>
        <filter-name>guiceFilter</filter-name>
        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>guiceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



    <!-- img -->
    <filter>
        <filter-name>imgFilter</filter-name>
        <filter-class>cz.incad.Kramerius.imaging.ImageFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>imgFilter</filter-name>
        <url-pattern>/nimg/*</url-pattern>
    </filter-mapping>



    <listener>
        <listener-class>cz.incad.Kramerius.backend.guice.GuiceConfigBean</listener-class>
        <listener-class>cz.incad.kramerius.users.impl.http.LoggedUserSessionListener</listener-class>
    </listener>


